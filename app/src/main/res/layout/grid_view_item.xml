<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp">

        <com.project.amplifire.Utilities.AlbumArtView
            android:id="@+id/grid_view_item_thumbnail"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_margin="16dp"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_album_art_template" />

        <TextView
            android:id="@+id/grid_view_item_playlist_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:alpha="1"
            android:background="#9000"
            android:elevation="6dp"
            android:padding="16dp"
            android:text="Playlist Name"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/grid_view_item_thumbnail"
            app:layout_constraintEnd_toEndOf="@id/grid_view_item_thumbnail"
            app:layout_constraintStart_toStartOf="@id/grid_view_item_thumbnail"
            app:layout_constraintTop_toTopOf="@id/grid_view_item_thumbnail"
            app:layout_constraintVertical_bias="1.0" />

        <ImageButton
            android:id="@+id/grid_view_item_overflow_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:elevation="6dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="0dp"
            android:tint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/grid_view_item_playlist_name"
            app:layout_constraintEnd_toEndOf="@+id/grid_view_item_playlist_name"
            app:layout_constraintTop_toTopOf="@+id/grid_view_item_playlist_name"
            app:srcCompat="@drawable/ic_more_vert_black_30dp" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>