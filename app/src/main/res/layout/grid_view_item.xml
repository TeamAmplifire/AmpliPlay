<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp">

        <com.project.amplifire.Utilities.AlbumArtView
            android:id="@+id/playlist_thumbnail_image_view"
            android:layout_width="175"
            android:layout_height="185"
            android:layout_margin="16dp"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_album_art_template" />

        <TextView
            android:id="@+id/playlist_name_text_view"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:alpha=".9"
            android:background="@color/colorText"
            android:elevation="6dp"
            android:padding="10dp"
            android:text="Playlist Name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/playlist_thumbnail_image_view"
            app:layout_constraintEnd_toEndOf="@+id/playlist_thumbnail_image_view"
            app:layout_constraintStart_toStartOf="@+id/playlist_thumbnail_image_view"
            app:layout_constraintTop_toTopOf="@+id/playlist_thumbnail_image_view"
            app:layout_constraintVertical_bias="1.0" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>